    <div class="grid-container" style="overflow-y:scroll">
        @foreach (var item in Model)
        {
            <div class="grid-item " onclick='silhoutteFromGallery(this,@item.SilhouetteId)'>
                @foreach (var mylis in item.ImageList)
                {
                    <div class="column">
                        <img class="img" src="@Url.Content("~/StyleUpload/" + mylis.ServerFileName)"
                             style="width:100%;height:100px;" />
                    </div>
                }
            <label id="selectedSilhoutte">@item.SilhouetteName</label>
            </div>
            
        }
    </div>
</div>
<script>
    function silhoutteFromGallery(itemid,silhoutteId) {
         $(".grid-item").css('background-color', '#ABC2FE'); 
        $(itemid).css('background-color', 'darkcyan'); 
        silhoutee = silhoutteId;
        $("#silhoutteName").val(silhoutee);
    }
</script>