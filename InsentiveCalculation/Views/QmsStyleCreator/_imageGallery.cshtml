<style type="text/css">
    .column {
        float: left;
        width: 50%;
        padding:5px;
    }
    label{
        text-align:center;
    }
    .imagediv {
        background-color: beige;
        margin: 2px;
    }
    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto ;
        background-color: #2196F3;
        height:400px;
        
    }
    .grid-item {
        background-color:lightskyblue;
        border:2px solid white;
        cursor: pointer;
        text-align: center;
    }
    .grid-item:hover{
        background-color:darkcyan;
    }
    
</style>
